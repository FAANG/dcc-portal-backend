{
    "settings": {
        "max_result_window" : 1000000,
        "analysis": {
            "analyzer": {
                "ftp_url": {
                    "type": "custom",
                    "tokenizer": "alphanumeric",
                    "filter": ["lowercase", "file_stopwords"]
                },
                "autocomp": {
                    "tokenizer" : "autocomplete",
                    "filter": ["lowercase"]
                },
                "case_insensitive_sort": {
                    "tokenizer": "keyword",    
                    "filter":  ["lowercase"] 
                },
                "autocomplete_search": {
                  "tokenizer": "keyword"
                }
            },
            "tokenizer": {
                "alphanumeric": {
                    "type": "pattern",
                    "pattern": "[^A-Za-z0-9]([^A-Za-z]*([^A-Za-z0-9]|$))?"
                },
                "autocomplete": {
                    "type": "edge_ngram",
                    "min_gram": 1,
                    "max_gram": 20,
                    "token_chars": [ "letter", "digit", "whitespace" ]
                }
            },
            "filter": {
                "file_stopwords": {
                    "type": "stop",
                    "stopwords": ["ftp", "sra", "ebi", "ac", "uk", "faang", "gz"]
                }
            }
        }
    }
}
